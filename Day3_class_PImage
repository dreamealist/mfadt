PImage myImage;
int winSize = 510;

void setup() {
  size(500, 600);
  background(255);

  background(255);
  size(800, 600);
  myImage = loadImage("IMG_3776.JPG");
}

void draw(){
  
  imageMode(CENTER);
  
  int r = mouseX/2;
  int g = 0;
  int b = mouseX/2;
  tint(r,g,b);
  image(myImage, mouseX, mouseX);
}
  
